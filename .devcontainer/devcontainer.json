{
  "name": "Dns base codespace",
  "image": "mcr.microsoft.com/devcontainers/python:3.8",
  "containerEnv": {
    "SERVER_DNS": "dns10.quad9.net"  // Set your desired DNS host name here
  },
  "postCreateCommand": [
    "echo 'nameserver 9.9.9.10' | sudo tee /etc/resolv.conf > /dev/null",
    "echo 'nameserver 149.112.112.10' | sudo tee -a /etc/resolv.conf > /dev/null",
    "echo 'nameserver 2620:fe::10' | sudo tee -a /etc/resolv.conf > /dev/null",
    "echo 'nameserver 2620:fe::fe:10' | sudo tee -a /etc/resolv.conf > /dev/null"
  ],
  "remoteUser": "root"
}
