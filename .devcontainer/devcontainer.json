{
  "name": "Custom DNS Codespace",
  "postCreateCommand": [
    "sudo apt-get update && sudo apt-get install -y dnsmasq",
    "echo 'server=127.0.0.53' | sudo tee -a /etc/dnsmasq.conf",
    "echo 'server=168.63.129.16' | sudo tee -a /etc/dnsmasq.conf",
    "echo 'domain=wor3tbeeecuulo0jx5iwhbl51d.cx.internal.cloudapp.net' | sudo tee -a /etc/dnsmasq.conf",
    "echo 'nameserver 127.0.0.1' | sudo tee /etc/resolv.conf",
    "sudo systemctl restart dnsmasq || true"
  ]
}
